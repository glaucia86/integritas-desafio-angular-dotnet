@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="integritasCtrl">
    <div class="divList">
        <p><b><i>Lista de todos os Produtos Cadastrados</i></b>
        </p>
        <table class="table table-hover">
            <tr>
                <td><b>Id Produto</b></td>
                <td><b>Nome Produto</b></td>
                <td><b>Tipo Produto</b></td>
                <td><b>Quantidade</b></td>
                <td><b>Preco</b></td>
            </tr>

            <tr ng-repeat="product in products">
                <td>{{product.IdProduto}}</td>
                <td>{{product.NomeProduto}}</td>
                <td>{{product.TipoProduto}}</td>
                <td>{{product.Quantidade}}</td>
                <td>{{product.Preco}}</td>
            </tr>
        </table>
    </div>   
</div>

