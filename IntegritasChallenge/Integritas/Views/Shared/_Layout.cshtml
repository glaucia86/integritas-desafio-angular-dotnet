<!DOCTYPE html>
<html lang="pt-br" ng-app="integritasApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/toastr")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Integritas System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <center><img src="../../Images/logo.png"/></center>
        <h1 class="text-center">Integritas System</h1>
        <h2 class="text-center">Desafio Angular.JS, MVC 5, WEbApi 2 & Entity Framework</h2>
        <h3 class="text-center">Glaucia Lemos - Full Stack Developer</h3>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Glaucia Lemos (Full Stack Developer)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularJs")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/customJs")
    @RenderSection("scripts", required: false)
</body>
</html>
